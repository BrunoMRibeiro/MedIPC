                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Profile.ProfileActivity" />
        </activity>

        <activity
            android:name=".Profile.BookletEditActivity"
            android:exported="true"
            android:parentActivityName=".Profile.BookletActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Profile.BookletActivity" />
        </activity>

        <activity
            android:name=".Profile.BookletAddRowActivity"
            android:exported="true"
            android:parentActivityName=".Profile.BookletEditActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Profile.BookletEditActivity" />
        </activity>

        <activity
            android:name=".Alarms.AlarmActivity"
            android:exported="true"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity
            android:name=".Alarms.AlarmEditActivity"
            android:exported="true"
            android:parentActivityName=".Alarms.AlarmActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
